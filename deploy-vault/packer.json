{
  "builders": [{
    "type": "vagrant",
    "communicator": "ssh",
    "source_path": "ubuntu/bionic64",
    "provider": "virtualbox",
    "teardown_method": "destroy",
    "skip_package": true
  }, {
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "vault-test"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "base.sh"
  }, {
    "type": "shell",
    "script": "install.sh"
  }, {
    "type": "file",
    "source": "goss.yaml",
    "destination": "/tmp/goss.yaml"
  }, {
    "type": "shell",
    "inline": ["goss -g /tmp/goss.yaml validate"]
  }]
}
